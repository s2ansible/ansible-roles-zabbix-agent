############ GENERAL PARAMETERS #################
PidFile=/var/run/zabbix/zabbix_agentd.pid
LogFile=/var/log/zabbix/zabbix_agentd.log
LogFileSize=50
DebugLevel=3
# SourceIP=
EnableRemoteCommands=0
# LogRemoteCommands=0

##### Passive checks related
Server={{ zabbix_agent_Server }}
ListenPort={{ zabbix_agent_ListenPort }}
# ListenIP=0.0.0.0
StartAgents=3

##### Active checks related
ServerActive={{ zabbix_agent_ServerActive }}
# Hostname=
HostnameItem=system.hostname
HostMetadata={{ zabbix_agent_HostMetadata }}
# HostMetadataItem=
RefreshActiveChecks=60
BufferSend=5
BufferSize=100
MaxLinesPerSecond=20

############ ADVANCED PARAMETERS #################
Timeout=30
AllowRoot={{ zabbix_agent_AllowRoot }}
Include=/etc/zabbix/zabbix_agentd.d/
# UnsafeUserParameters=0

####### LOADABLE MODULES #######
# LoadModulePath=${libdir}/modules
# LoadModule=
{% for user_parameter in zabbix_agent_UserParameters %}
UserParameter={{ user_parameter }}
{% endfor %}
